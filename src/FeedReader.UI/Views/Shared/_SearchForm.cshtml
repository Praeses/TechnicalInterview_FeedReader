@using Microsoft.AspNet.Identity
@using (Html.BeginForm("Search", "Feed", FormMethod.Post, new { id = "feedSearch", role = "form", @class = "form form-inline" }))
{
    @Html.AntiForgeryToken()
    <h3>Search for new feeds</h3>
    <hr />
    <div class="form-group col-md-6">
        <div class="">
            <input type="text" class="form-control" name="searchEntry" id="searchEntry" placeholder="Search for feeds by keyword, url, category..." />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4 col-lg-3 top10">
            <button class="btn btn-primary" type="submit">Find a new feed</button>
        </div>
    </div>
}
