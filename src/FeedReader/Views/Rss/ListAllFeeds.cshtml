
@{
    ViewBag.Title = "ListAllFeeds";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using FeedReader.Models;

@model ICollection<RssChannel>
<style>
    #channelListHolder {
        display: block;
        padding: 15px;
    }
     #channelListHolder a{
        color: black;
        text-decoration: underline;
    }

    .unsubscribeLink {
        display: none;
        padding-left: 5px;
        cursor: pointer;
    }

    #channelListHolder li {
        list-style: none;
    }
</style>

@section scripts {
<script>
    $(function () {
        $('li').hover(function () {
            $(this).find('.unsubscribeLink').show();
        }, function () {
            $(this).find('.unsubscribeLink').hide();
        });
    });
</script>
}

<ul id="channelListHolder">
    @foreach (RssChannel channel in Model)
    {
        <li><a href="ViewFeed?feedUrl=@Html.ValueFor(a=>channel.FeedUrl)">@Html.DisplayFor(a => channel.Title)</a><a class="unsubscribeLink" title="Unsubscribe" href="@Url.Action("RemoveSubscription", "Rss", new { rssChannelId = channel.RssChannelId })"><img src="@Url.Content("~/Content/Images/unsubscribe.png")" /></a></li>
    }
</ul>

