@model IEnumerable<FeedReader.Models.UserSubscription>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm())
    {
        <p> Keyword: @Html.TextBox("SearchString")
        <input type="submit" value="Filter" /></p>
    }
</p>
<table class="table">
    <tr>
        @*
    <th>
        @Html.DisplayNameFor(model => model.userName)
    </th>*@
        <th>
            @Html.DisplayNameFor(model => model.rssFeedURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rssFeedName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*
    <td>
        @Html.DisplayFor(modelItem => item.userName)
    </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.rssFeedURL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rssFeedName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
