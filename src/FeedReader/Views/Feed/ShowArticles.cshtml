@model IEnumerable<FeedReader.Models.FeedArticle>

@{
    ViewBag.Title = "ShowArticles";
}
<div class="containerDiv">
    <h2>Channel Articles</h2>
    <table id="articleTable" class="display" cellspacing="0">
        <thead>
            <tr>
                <th>Article</th>
                <th>Publish Date</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr role="row" title="@item.desc">
                    <td>
                        <a href=@item.link target="_blank"> @Html.DisplayFor(modelItem => item.title) </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.publishDate)
                    </td>
                    <td>
                        @(item.authors == null ? "Unavailable" : item.authors)

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        @Html.ActionLink("Back to Channel List", "Index")
    </div>
</div>
@section Scripts
    {
    <script type="text/javascript">
            $(document).ready(function () {
                $('#articleTable').DataTable()
            });
    </script>
}
