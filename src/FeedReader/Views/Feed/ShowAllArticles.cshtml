@model Dictionary<String, IEnumerable<FeedReader.Models.FeedArticle>> 

@{
    ViewBag.Title = "ShowAllArticles";
}
<div class="containerDiv">
    <h2>All Channel Articles</h2>
    <table id="allArticles" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Article</th>
                <th>Channel</th>
                <th>Publish Date</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var channel in Model)
            {
                foreach (var article in channel.Value)
                {
                    <tr title="@article.desc">
                        <td>
                            <a href=@article.link target="_blank"> @Html.DisplayFor(modelItem => article.title) </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => channel.Key)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => article.publishDate)
                        </td>
                        <td>
                            @(article.authors == null ? "Unavailable" : article.authors)

                        </td>
                    </tr>
                }
            }

        </tbody> 
    </table>
    <div>
        @Html.ActionLink("Back to Channel List", "Index")
    </div>
</div>
@section Scripts
    {
        <script type="text/javascript">
            $(document).ready(function () {
                $('#allArticles').DataTable();
            });
        </script>
       
        
    }

   

