@model IEnumerable<FeedReader.Models.AspNetFeed>
@using Microsoft.AspNet.Identity;
@using FeedReader.Models;

@{
    ViewBag.Title = "Index";
}

<h2>Feed List</h2>

<p>
    @Html.ActionLink("Subscribe", "Create", "Feed")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FeedUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecentPostId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FeedUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecentPostId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
