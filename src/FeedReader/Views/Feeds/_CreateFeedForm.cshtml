@model FeedReader.Models.Feed

@using (Html.BeginForm("Create", "Feeds", FormMethod.Post, new { @class = "col-md-6" }))
{
    @Html.AntiForgeryToken()
    @Html.EditorFor(x => x.URL, new { htmlAttributes = new { @class = "form-control typeahead", placeholder = "Search For New Subscriptions or Enter a URL" } })
    @*<input type="text" name="URL" placeholder="Search For New Feeds or Enter a URL" class="typeahead form-control" />*@
    <button type="submit" class="btn btn-md btn-success"><span class="fa fa-plus"></span> Add</button>
    @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })
}
