@model IEnumerable<FeedReader.Models.UserFeedModel>
@{
    ViewBag.Title = "Manage My Subscriptions";
}

<h2>My Subscriptions</h2>

<p>
    @Html.ActionLink("Add New Subscription", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
               @Html.ActionLink(item.Title, "List", new {id = item.UserFeedID})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserFeedID }) |
                @Html.ActionLink("Details", "Details", new { id = item.UserFeedID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.UserFeedID })
            </td>
        </tr>
    }
</table>